{
  "name": "first-backend",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nest start -b swc -w",
    "database": "prisma studio",
    "dockerup": "docker-compose up -d",
    "dockerdown": "docker-compose down",
    "format": "eslint -c .eslintrc.json --fix --ext .ts,.tsx src && prettier --write 'src/**/*.+(js|jsx|ts|tsx|html|css)'",
    "check": "tsc",
    "migrate": "prisma migrate dev",
    "createMigration": "prisma migrate dev --name init"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "rootDir": "src",
  "license": "MIT",
  "dependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/common": "^10.3.3",
    "@nestjs/core": "^10.3.3",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/schematics": "^10.1.1",
    "@prisma/client": "^5.9.1",
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.2",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-jwt": "^4.0.1",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "bcrypt": "^5.1.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.4",
