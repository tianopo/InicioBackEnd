{
  "name": "first-backend",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "nest start -b swc -w",
    "database": "prisma studio",
    "dockerup": "docker-compose up -d",
    "dockerdown": "docker-compose down",
    "format": "eslint -c .eslintrc.json --fix --ext .ts,.tsx src && prettier --write 'src/**/*.+(js|jsx|ts|tsx|html|css)'",
    "migrate": "prisma migrate dev",
    "createMigration": "prisma migrate dev --name init",
    "lintStaged": "npx --no-install lint-staged",
    "pre-commit-lint": "npm-run-all --parallel lintStaged",
    "prepare": "husky",
    "checked": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:load": "artillery run tests/load/load-all.yml --output tests/reports/load.json",
    "vercel-build": "npm run build && npx prisma migrate deploy",
    "build": "nest build"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "rootDir": "src",
  "license": "MIT",
  "dependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/common": "^10.3.3",
    "@nestjs/core": "^10.3.3",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.9",
    "@nestjs/throttler": "^5.1.2",
    "@prisma/client": "^5.15.1",
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.2",
    "@swc/jest": "^0.2.36",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-jwt": "^4.0.1",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "artillery": "^2.0.15",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemailer": "^6.9.9",
    "npm-run-all": "^4.1.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prettier": "^3.2.5",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^5.15.1",
    "reflect-metadata": "^0.2.1",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1"
  },
  "author": "https://github.com/tianopo",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "husky": "^9.0.11"
  }
}