generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @unique @default(uuid())
  createdIn DateTime @default(now())
  updated   DateTime @default(now()) @updatedAt

  name     String
  email    String @unique
  token    String
  password String
  role     String

  @@map("user")
}

model Buyer {
  id        String   @id @unique @default(uuid())
  createdIn DateTime @default(now())
  updated   DateTime @default(now()) @updatedAt

  name         String
  counterparty String
  exchange     String
  document     String  @unique
  Order        Order[]

  @@map("buyer")
}

model Seller {
  id        String   @id @unique @default(uuid())
  createdIn DateTime @default(now())
  updated   DateTime @default(now()) @updatedAt

  name         String
  counterparty String
  exchange     String
  Order        Order[]

  @@map("seller")
}

model Order {
  id        String   @id @unique @default(uuid())
  createdIn DateTime @default(now())
  updated   DateTime @default(now()) @updatedAt

  numeroOrdem   String @unique
  dataTransacao String
  exchange      String
  ativoDigital  String
  quantidade    String
  valor         String
  valorToken    String
  taxaTransacao String
  tipo          String // 'compra' ou 'venda'

  buyerId String? // Nullable para vendas
  buyer   Buyer?  @relation(fields: [buyerId], references: [id])

  sellerId String? // Nullable para compras
  seller   Seller? @relation(fields: [sellerId], references: [id])

  @@map("order")
}
